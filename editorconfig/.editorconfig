root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{js,jsx,ts,tsx,yml,yaml,json}]
indent_size = 2

[*.lua]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 8

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
max_line_length = 0
