# Core
[apply]
    whitespace = fix

[core]
    excludesfile = ~/.gitignore
    whitespace = space-before-tab,-indent-with-non-tab,trailing-space
    autocrlf = input

# UI stuff
[color]
    ui = auto
[column]
    ui = auto
[branch]
    sort = -committerdate
[tag]
    sort = version:refname
[commit]
    template = ~/.gitmessage
    verbose = true

# Diff and merge
[diff]
    algorithm = histogram
    colorMoved = true
    colorMovedWS = allow-indentation-change
    mnemonicPrefix = true

    tool = nvim_difftool
    submodule = diff

[diff "bin"]
    textconv = hexdump -v -C

[difftool]
    prompt = true
    trustExitCode = true

[difftool "nvim_difftool"]
    cmd = nvim -c \"DiffTool $LOCAL $REMOTE\"

[merge]
    log = true
    tool = nvimdiff1

[mergetool]
    prompt = true
    trustExitCode = true
    hideResolved = true

# Push/pull/rebase

[push]
    autoSetupRemote = true
    followTags = true

[pull]
    rebase = true

[fetch]
    prune = true
    all = true

[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true

[rerere]
    enabled = true
    autoupdate = true

# [credential]
# helper = store
[credential "https://github.com"]
    helper =
    helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
    helper =
    helper = !/usr/bin/gh auth git-credential

[http]
    postBuffer = 524288000

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

[alias]
    review = "!git fetch origin && git difftool -d origin/HEAD...HEAD"
    addw = "!f() { git diff -U0 -w --no-color \"$@\" | git apply --cached --ignore-whitespace --unidiff-zero; }; f"
# Worktree stuff
    wt = worktree
    wtl = worktree list
    wtc = worktree prune
    wtb = "!f() { root=$(git rev-parse --show-toplevel); name=$(basename \"$root\"); dir=$(dirname \"$root\"); git worktree add \"$dir/${name}-$1\" \"$1\"; }; f"
    wtp = "!f() { root=$(git rev-parse --show-toplevel); name=$(basename \"$root\"); dir=$(dirname \"$root\"); git fetch origin pull/$1/head:pr/$1 && git worktree add \"$dir/${name}-pr-$1\" pr/$1; }; f"
    wtr = "!f() { root=$(git rev-parse --show-toplevel); name=$(basename \"$root\"); dir=$(dirname \"$root\"); git worktree remove \"$dir/${name}-$1\" && rm -rf \"$dir/${name}-$1\"; }; f"
# Branch cleanup
    branch-cleanup = "!git-branch-cleanup"
# Sync current branch with upstream remote (e.g., reset --hard to upstream/<branch>)
    sync-upstream = "!f() { git fetch upstream && git reset --hard upstream/$(git rev-parse --abbrev-ref HEAD); }; f"

[user]
    name = Tomas Slusny
    email = slusnucky@gmail.com

[include]
    path = ~/.gitconfig.local

[includeIf "gitdir:~/git-work/"]
    path = ~/.gitconfig.work
