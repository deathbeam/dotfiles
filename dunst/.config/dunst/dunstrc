; vim:ft=dosini

[global]
dmenu = ~/.config/fzfmenu/fzfmenu -p dunst:
history_length = 100
idle_threshold = 120

# Limit notifications displayed at once and indicate hidden ones
notification_limit = 5
indicate_hidden = yes

# Position on screen
offset = (10, 10)
follow = keyboard

# Navigation
mouse_left_click = do_action, close_current
mouse_right_click = close_current
mouse_middle_click = close_all

# UI
enable_recursive_icon_lookup = true
markup = full
font = monospace 12
padding = 5
horizontal_padding = 5
frame_color = "#268bd2"
frame_width = 1
separator_color = frame
separator_height = 1

[play_sound]
summary = "*"
script = ~/.config/dunst/alert.sh
msg_urgency = critical

[urgency_low]
background = "#002b36"
foreground = "#839496"
timeout = 10

[urgency_normal]
background = "#073642"
foreground = "#93a1a1"
timeout = 10

[urgency_critical]
background = "#268bd2"
foreground = "#eee8d5"
timeout = 0
