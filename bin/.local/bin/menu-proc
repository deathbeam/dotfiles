#!/bin/sh
scriptpath=$(dirname "$(readlink -f "$0")")

processes="$(
  ps -eo %cpu,%mem,pid,user,cmd | {
    head -n 1
    tail -n +2 \
      | grep -v procmenu \
      | grep -v 'ps -eo' \
      | awk '{print $1+$2, $0}' \
      | sort -k 1 -n -r \
      | cut -d ' ' -f 2-
  }
)"
process=$(echo "$processes" \
    | $scriptpath/fzfmenu "$@" \
    --header-lines=1 \
    --preview="echo {} | tr -s ' ' | cut -d ' ' -f 6-" \
    --preview-window=down,3,wrap \
    | awk '{print $3}')

[[ -n $process ]] || exit 1
kill -9 "$process" &>/dev/null
