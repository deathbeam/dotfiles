#!/bin/sh

TITLE="Cheatsheet"
CLASS="overlay"
TERM_CLASS="--class"
if [ "$TERMINAL" = "st" ]; then
   TERM_CLASS="-n"
elif [ "$TERMINAL" = "foot" ]; then
   TERM_CLASS="-a"
fi
CHEATSHEET=~/git/dotfiles/CHEATSHEET.md

if ! hyprctl clients | grep -q "class: $CLASS"; then
    $TERMINAL $TERM_CLASS $CLASS -T "$TITLE" -e "$SHELL" -ic "glow --pager $CHEATSHEET"
else
    hyprctl dispatch closewindow "class:$CLASS"
fi

