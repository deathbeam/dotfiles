#!/bin/sh
shopt -s nullglob globstar

games="$(for file in ~/.steam/steam/steamapps/*.acf; do
    echo "$(grep -oP '"appid"\s+"\K\d+' "$file"): $(grep -oP '"name"\s+"\K[^"]+' "$file")"
done)"

appid=$(echo "$games" | \
    fzfmenu "$@" \
    --with-nth=2.. \
    | grep -oP '^\d+')

[[ -n $appid ]] || exit 1
exec steam -silent -applaunch "$appid"
