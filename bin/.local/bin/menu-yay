#!/bin/sh

installed=$(yay -Qq)
available=$(yay -Slq)

installed_pkgs=$(printf "%s\n" "$installed" | awk '{print "\033[0;33m" $0 "\033[0m"}')
available_pkgs=$(printf "%s\n" "$available" | grep -vxFf <(printf "%s\n" "$installed"))
all_pkgs=$(printf "%s\n%s\n" "$installed_pkgs" "$available_pkgs")

pkg=$(printf "%s\n" "$all_pkgs" | fzfmenu -p "yay" --ansi --preview="yay -Si {1}")

[ -z "$pkg" ] && exit 1

name=$(echo "$pkg" | awk '{print $1}')

if printf "%s\n" "$installed" | grep -qx "$name"; then
    action="Uninstalling"
    cmd="yay -Rns $name"
else
    action="Installing"
    cmd="yay -S $name"
fi

$TERMINAL -e "$SHELL" -ic "echo '$action $name...'; $cmd; echo; read 'REPLY?Press enter to exit...'"
